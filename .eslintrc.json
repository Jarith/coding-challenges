{
    "root": true,
    "env": {
        "node": true,
        "jest": true,
        "jest/globals": true
    },
    "plugins": [
        "import",
        "jest"
    ],
    "extends": [
        "airbnb-base",
        "plugin:import/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never"
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "import/prefer-default-export": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "no-underscore-dangle": "off",
        "import/no-duplicates": "off"
    }
}